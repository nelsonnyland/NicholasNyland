@model IEnumerable<NicholasNyland.Models.Exhibit>

@using NicholasNyland.Models

@{
    ViewBag.Title = "Exhibits";
}

<h2>Exhibits</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        Art first = new Art();
        string firstPicture = "";

        if (item.Gallery.Count() > 0)
        {
            first = item.Gallery.First();
            firstPicture = first.Path;
        }

        <tr>
            <td>
                @if (item.Gallery.Count() > 0)
                {
                    <img src="@Html.DisplayFor(modelItem => firstPicture)" width="100" height="100" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Name }) <br />
                @Html.ActionLink("Edit", "Edit", new { id = item.Name }) <br />
                @Html.ActionLink("Delete", "Delete", new { id = item.Name })
            </td>
        </tr>

    }

</table>
